systemLog:
   destination: file
   path: /var/vcap/sys/log/mongod/mongod.log
   quiet: false
   logAppend: true

storage:
  mmapv1:
    dbPath: /var/vcap/store/mongod
    directoryPerDB: true
    journal:
      enabled: <%= !p('mongod.arbiter') %>
    smallFiles: true
    <% if p('mongod.quota_enabled') %>
    quota:
      enforced: true
      maxFilesPerDB: 16
    <% end %>

security:
  authorization: enabled
  keyFile: /var/vcap/jobs/mongod/config/mongod_replica_key

net:
  port: <%= p("mongod.port") %>

replication:
  replSetName: <%= p("mongod.replset_name") %>